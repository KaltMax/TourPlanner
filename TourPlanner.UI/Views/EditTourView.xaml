<UserControl x:Class="TourPlanner.UI.Views.EditTourView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:local="clr-namespace:TourPlanner.UI.Views"
                 mc:Ignorable="d" 
                 Height="Auto" Width="Auto">

    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="5" Padding="5" Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Edit Tour Forms -->
                <StackPanel x:Name="EditTourForms" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" Margin="10, 5">
                    <TextBlock HorizontalAlignment="Center" Foreground="LightGray" FontWeight="Bold" FontSize="20" Margin="10, 5" Text="Edit Tour"/>

                    <Separator Margin="0,0,0,20"/>

                    <StackPanel>
                        <Label Content="TourName" Foreground="LightGray" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                        <TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="5" Margin="10, 5" FontWeight="Bold" Background="LightGray" TextWrapping="Wrap" Text="{Binding TourName, Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="TourDescription" Foreground="LightGray" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                        <TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="5" Margin="10, 5" FontWeight="Bold" Background="LightGray" TextWrapping="Wrap" Text="{Binding Description, Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="From" Foreground="LightGray" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                        <TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="5" Margin="10, 5" FontWeight="Bold" Background="LightGray" TextWrapping="Wrap" Text="{Binding From, Mode=TwoWay , UpdateSourceTrigger=PropertyChanged }"/>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="To" Foreground="LightGray" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                        <TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="5" Margin="10, 5" FontWeight="Bold" Background="LightGray" TextWrapping="Wrap" Text="{Binding To, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <Label Content="Transport Type" Foreground="LightGray" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                        <ComboBox FontWeight="Bold" Padding="5" SelectedValue="{Binding TransportType, Mode=TwoWay}" SelectedValuePath="Tag">
                            <ComboBoxItem FontWeight="Bold" Tag="Car" Content="Car" Padding="5"/>
                            <ComboBoxItem FontWeight="Bold" Tag="Walking" Content="Walking" Padding="5"/>
                            <ComboBoxItem FontWeight="Bold" Tag="Bike" Content="Bike" Padding="5"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Edit Tour forms buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5, 20">
                        <Button Style="{StaticResource RoundedButtonStyle}" Padding="10" Width="100" Height="40" Content="Save" Margin="5" Command="{Binding SaveCommand}"/>
                        <Button Style="{StaticResource RoundedButtonStyle}" Padding="10" Width="100" Height="40" Content="Cancel" Margin="5" Command="{Binding CancelCommand}"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
    